# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
NODE_ENV=dev
PORT=3000
API_PREFIX=api/v1
PROTOCOLO=http
IP_SERVER=localhost
LISTEN_SERVER=0.0.0.0

# ============================================
# DOCUMENTACIÓN SWAGGER
# ============================================
PROJECT=Billetera Virtual - Servidor Database
DOC_SWAGGER=docs
URL_JSON_SWAGGER=docs-json

# ============================================
# BASE DE DATOS MYSQL
# ============================================
# Variables de conexión
DB_USERNAME=billeterauser
DB_PASSWORD=billeterapass
DB_DATABASE_NAME=billetera_virtual
DB_HOST=localhost
DB_PORT=3306

# URL construida dinámicamente (usar variables arriba)
DATABASE_URL="mysql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE_NAME}"

# ============================================
# DOCKER COMPOSE - MYSQL
# ============================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=billetera_virtual
MYSQL_USER=billeterauser
MYSQL_PASSWORD=billeterapass

# ============================================
# SEGURIDAD - API KEY
# ============================================
# Esta API Key protege el acceso al servidor-database
API_KEY=super-secret-api-key-change-in-production-123456

# ============================================
# SERVICIO DE EMAIL (SMTP)
# ============================================
# Configuración para Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password-de-google

# Remitente del email
EMAIL_FROM="Billetera Virtual <noreply@billetera.com>"

# ============================================
# CONFIGURACIÓN DE TOKENS
# ============================================
# Tiempo de expiración del token de confirmación (en minutos)
TOKEN_EXPIRATION_MINUTES=15
